<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F0"
    tools:context=".SignInActivity">

    <EditText
        android:id="@+id/signinusername"
        android:layout_width="269dp"
        android:layout_height="58dp"
        android:layout_marginTop="234dp"
        android:layout_marginBottom="440dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/signinpassword1"
        android:layout_width="269dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/signinusername"
        app:layout_constraintStart_toStartOf="@+id/signinusername"
        app:layout_constraintTop_toBottomOf="@+id/signinusername" />

    <EditText
        android:id="@+id/signinpassword2"
        android:layout_width="269dp"
        android:layout_height="58dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="Re-enter password "
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/signinpassword1"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/signinpassword1"
        app:layout_constraintTop_toBottomOf="@+id/signinpassword1" />

    <EditText
        android:id="@+id/firstpassclue"
        android:layout_width="276dp"
        android:layout_height="89dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter password hint (This is necessary if password forgetten and used for recovery)"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/signinpassword2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/signinpassword2"
        app:layout_constraintTop_toBottomOf="@+id/signinpassword2" />

    <Button
        android:id="@+id/singinok"
        android:layout_width="122dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:background="#D3DDE6"
        android:text="@android:string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/firstpassclue"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/firstpassclue"
        app:layout_constraintTop_toBottomOf="@+id/firstpassclue"
        app:layout_constraintVertical_bias="0.462" />


</androidx.constraintlayout.widget.ConstraintLayout>