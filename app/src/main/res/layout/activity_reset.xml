<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F0"
    tools:context=".ResetActivity">

    <EditText
        android:id="@+id/resetusername"
        android:layout_width="268dp"
        android:layout_height="76dp"
        android:layout_marginTop="171dp"
        android:layout_marginBottom="484dp"
        android:ems="10"
        android:hint="LoginUserName"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstpassclue"
        android:layout_width="276dp"
        android:layout_height="89dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter password hint (This is necessary if password forgetten and used for recovery)"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/resetusername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/resetusername"
        app:layout_constraintTop_toBottomOf="@+id/resetusername" />

    <Button
        android:id="@+id/resetbutton"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:background="#d3dde6"
        android:text="Resetnow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstpassclue"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>