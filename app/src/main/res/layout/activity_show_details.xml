<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F0"
    tools:context=".ShowDetails">

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text="RegNo "
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Regno"
        android:layout_width="322dp"
        android:layout_height="52dp"
        android:layout_marginEnd="2dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="89dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="#FFD3DDE6"
        android:gravity="center"
        android:text="Name"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:textSize="24sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="132dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text="10th GPA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="132dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="143dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text="       12th %"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text="        B.tech %"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tenper"
        android:layout_width="134dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="#D3DDE6"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/twelper"
        android:layout_width="133dp"
        android:layout_height="57dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:textSize="18sp"
        android:text="86"
        app:layout_constraintBottom_toBottomOf="@+id/tenper"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/tenper"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btechper"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/twelper"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/twelper" />


    <TextView
        android:id="@+id/email"
        android:layout_width="78dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text="Email"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tenper" />

    <TextView
        android:id="@+id/emailid"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text=""
       android:autoSizeMinTextSize="@android:dimen/app_icon_size"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="88dp"
        android:layout_height="54dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:text="ParentNo."
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/phno"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:background="#D3DDE6"
        android:gravity="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

</androidx.constraintlayout.widget.ConstraintLayout>